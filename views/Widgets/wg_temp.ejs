
<% Object.keys(roomCache).forEach(function(roomName) { 
    const room = roomCache[roomName]; 
%>

<div id="wg_temp">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= room.sensor_name %> Status</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">

                        <div class="col-xs-3">
                            <i class="fa fa-cloud fa-5x"></i>
                        </div>

                        <div class="col-xs-3 text-left">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <div style="margin-right: 10px; font-size: 18px; width: 150px;">Room temp:</div>
                                <div style="font-size: 36px;"><%= room.last_temperature !== null && room.last_temperature !== undefined ? room.last_temperature : '99' %></div>
                            </div>
                            <div style="display: flex; align-items: center;">
                                <div style="margin-right: 10px; font-size: 18px; width: 150px;">Room humid:</div>
                                <div style="font-size: 36px;"><%= room.last_humidity !== null && room.last_humidity !== undefined ? room.last_humidity : '99' %></div>
                            </div>
                        </div>

                        <div class="col-xs-4 text-center">
                            <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 10px;">
                                <div style="margin-right: 10px; font-size: 18px; width: 80px;">Temp set:</div>
                                <div class="setpoint-<%= roomName %>" style="margin-bottom: 0; font-size: 36px;"><%= room.temp_setpoint %></div>
                                <div style="margin-left: 15px;">
                                    <a href="javascript:" onclick="crescTemp('<%= roomName %>');" style="margin-right: 5px;">
                                        <i class="fa fa-plus fa-2x" style="color: #5dade2;"></i>
                                    </a>
                                    <a href="javascript:" onclick="scadTemp('<%= roomName %>');">
                                        <i class="fa fa-minus fa-2x" style="color: #5dade2;"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <a href="javascript:;" onclick="getAChart();">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <!-- /.panel-heading
        <div id="morris-area-chart"></div>
        <div id="morris-bar-chart"></div>
        <div id="morris-donut-chart"></div>
        -->

    </div>
</div>
<!-- /#page-wrapper -->

<% }); %>

<script>

function crescTemp(roomName){
	console.log('Increasing temperature setpoint for room:', roomName);
	// Update the UI first
	var currentSetpoint = parseInt(document.querySelector('.setpoint-' + roomName).textContent);
	var newSetpoint = currentSetpoint + 1;
	
	// Send request to server to persist to database
	$.ajax({
		type: 'POST',
		url: 'http://localhost:3000/api/crescTemp',
		contentType: 'application/json',
		data: JSON.stringify({
			room: roomName,
			newSetpoint: newSetpoint
		}),
		success: function(data) {
			console.log('Temperature setpoint increased successfully:', data);
			// Update the UI with new value
			document.querySelector('.setpoint-' + roomName).textContent = newSetpoint;
		},
		error: function(err) {
			console.error('Error increasing temperature setpoint:', err);
			alert('Error updating temperature setpoint');
		}
	});
}

function scadTemp(roomName){
	console.log('Decreasing temperature setpoint for room:', roomName);
	// Update the UI first
	var currentSetpoint = parseInt(document.querySelector('.setpoint-' + roomName).textContent);
	var newSetpoint = currentSetpoint - 1;
	
	// Send request to server to persist to database
	$.ajax({
		type: 'POST',
		url: 'http://localhost:3000/api/scadTemp',
		contentType: 'application/json',
		data: JSON.stringify({
			room: roomName,
			newSetpoint: newSetpoint
		}),
		success: function(data) {
			console.log('Temperature setpoint decreased successfully:', data);
			// Update the UI with new value
			document.querySelector('.setpoint-' + roomName).textContent = newSetpoint;
		},
		error: function(err) {
			console.error('Error decreasing temperature setpoint:', err);
			alert('Error updating temperature setpoint');
		}
	});
}

</script>
